<style>
  footer {
    border: 8px solid var(--secondary, #dfa120);
    font-family: 'Aspekta';
  }

  .footer-container {
    position: relative;
    background-color: var(--clr-accent); /* Couleur dorée/ambrée */
    color: var(--clr-secondary);
    padding: 3rem 2rem 0;
    overflow: hidden;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .footer-column h2 {
    margin-bottom: 1.5rem;
  }

  .footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-column li {
    margin-bottom: 0.75rem;
  }

  .footer-column a {
    color: #000;
    text-decoration: none;
    font-size: 1rem;
    transition: opacity 0.2s;
  }

  .footer-column a:hover {
    opacity: 0.8;
  }

  .arrow-link {
    display: flex;
    align-items: center;
  }

  .arrow-link::before {
    content: "↗";
    margin-right: 0.5rem;
    font-size: 0.875rem;
  }

  .social-icons {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    color: var(--clr-secondary);
  }

  .group-links {
    margin-top: 1rem;
  }

  .footer-logo {
    /* position: absolute; */
    bottom: 0rem;
    left: 50vw;
    translate: -50%;
    width: 100vw;
    position: relative;
    background-repeat: no-repeat;
    background-position: center bottom;
    background-size: contain;
    opacity: 0.3;
    z-index: 1;
  }
</style>
